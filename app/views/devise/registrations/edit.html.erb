<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "新規パスワード" %> <i>(変更しない場合、空白のままにしてください。)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "新規パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :current_password %> <br>
        <i>変更のためには、現在のパスワードを入力してください。</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="actions">
        <%= f.submit "Update", class:'btn btn-success mt-2' %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-12 col-md-4 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>アカウントの削除</h3>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger' %>
    <%= link_to "戻る", :back, class:'btn btn-secondary mt-2' %>
  </div>

</div>

