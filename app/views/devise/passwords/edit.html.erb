<h2>パスワード再設定</h2>
<%= form_with model: @user, url: user_password_path, method: :patch, local: true do |f| %>
<div class='form-wrap'>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.label :password, "新規パスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認のためもう一度入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class:'btn btn-success mt-2' %>
  </div>
<% end %>
