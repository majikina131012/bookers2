
      <div class="col-md-3">
        <h2>User info</h2>
        <p><%= image_tag user.get_profile_image(100,100) %></p>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th>introduction</th>
            </tr>
            <tr>
              <td><%=user.name %></td>
              <td><%=user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <% if user.id == current_user.id %>
            <p><%= link_to  edit_user_path(user) do %>
                  <i class="fas fa-user-cog"></i>
                <% end %>
            </p>
        <% else %>
            <p><%= link_to edit_user_path(user.id) do %>
                  <i class="fas fa-user-cog"></i>
                <% end %>  
            </p>
        <% end %>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>