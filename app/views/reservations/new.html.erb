<div class="row">
  <div class="col-12 text-center title">
    <h1>新規予約画面</h1>
  </div>
  <div class="col-12 mt-3 content">
    <% if @reservation.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= @reservation.errors.count %>件のエラーがあります。</strong>
        <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: [@book, @reservation] do |f| %>
    <div class="day form-group">
      <%= f.label :day, '日付' %>
      <%= f.text_field :day, class: 'form-control', value: @day, readonly: true %>
    </div>
    <div class="time form-group">
      <%= f.label :time, '時間' %>
      <%= f.text_field :time, class: 'form-control', value: @time, readonly: true %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :start_time, value: @start_time %>
    <div class="submit">
      <%= f.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
    </div>
  <% end %>
  <div class="col-12 text-right">
    <%= link_to '戻る', book_reservations_path(@book.id) %>
  </div>
  </div>
</div>